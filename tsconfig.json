{
  "compilerOptions": {
    "outDir": "./transpiled/",
    "sourceMap": true,
    "noImplicitAny": false,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "CommonJS",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@utils/*": ["test-utils/*"],
    },
    "allowJs": true,
    "target": "ES5",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@0x/typescript-typings/types",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./scripts/**/*.ts",
    "./types/**/*.ts",
    "./tasks/**/*.ts",
    "./test/**/*.ts",
    "./test-fork/**/*.ts",
    "./test-utils/**/*.ts",
    "./*.js"
  ],
  "files": ["./hardhat.config.ts", "./hardhat-fork.config.ts", "./tasks.config.ts", "./tasks-fork.config.ts"]
}