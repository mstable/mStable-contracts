{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "useTabs": false,
    "singleQuote": false,
    "printWidth": 140,
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript",
                "trailingComma": "all",
                "arrowParens": "always"
            }
        },
        {
            "files": "*.sol",
            "options": {
                "printWidth": 100,
                "bracketSpacing": true,
                "explicitTypes": "always"
            }
        }
    ]
}
